<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Login"
            android:textSize="60sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/abu1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/nunito_sans_regular"
            android:text="Sign in with your data that you entered during your registration."
            android:layout_marginEnd="10dp"
            android:textColor="@color/abu1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/abu2"
            android:fontFamily="@font/nunito_sans_regular"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_email"
                android:hint="name@example.com                                  "
                android:textAlignment="center"
                android:textColorHint="@color/abu1"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/abu2"
            android:fontFamily="@font/nunito_sans_regular"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:background="@drawable/shape_email"
                android:hint="min. 8 character                                    "
                android:textAlignment="center"
                android:textColorHint="@color/abu1"
                android:fontFamily="@font/nunito_sans_bold"
                android:textSize="14sp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kotak"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep me logged in"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/abu2"
            android:fontFamily="@font/nunito_sans_regular"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_login"
        >

        <Button
            android:id="@+id/login"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:textColorHint="@color/white"
            android:hint="login"
            android:backgroundTint="@color/ungu_1"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="15sp"
            android:onClick="login"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/biru"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?"
            android:fontFamily="@font/nunito_sans_regular"
            android:textColor="@color/abu1"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_marginStart="5dp"
            android:textColor="@color/biru"
            android:fontFamily="@font/nunito_sans_regular"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>